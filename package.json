{
    "name": "pbg-token-validators",
    "version": "1.0.17",
    "description": "PBG Token contracts validators for Cardano",
    "main": "dist/index.js",
    "type": "module",
    "types": "dist/index.d.ts",
    "workspaces": [
        "test",
        "test/context"
    ],
    "scripts": {
        "build": "npx hl2ts --out-dir ./dist",
        "co:login": "aws codeartifact login --tool npm --repository pbg --domain pbg --domain-owner 198334355085 --profile pbg --region us-east-1",
        "prettify": "npx prettier . --write",
        "test": "npm run test --prefix test"
    },
    "publishConfig": {
        "registry": "https://pbg-198334355085.d.codeartifact.us-east-1.amazonaws.com/npm/pbg/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PBGToken/validators.git"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": false
    },
    "keywords": [
        "PBGToken",
        "smart",
        "contract",
        "validators",
        "Cardano",
        "Helios"
    ],
    "author": "Christian Schmitz",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/PBGToken/validators/issues"
    },
    "homepage": "https://github.com/PBGToken/validators#readme",
    "dependencies": {
        "@helios-lang/compiler": "^0.17.3",
        "@helios-lang/contract-utils": "^0.2.80"
    },
    "devDependencies": {
        "@helios-lang/codec-utils": "^0.2.1",
        "@helios-lang/crypto": "^0.1.17",
        "@helios-lang/ledger": "^0.5.8",
        "@helios-lang/type-utils": "^0.1.25",
        "@helios-lang/uplc": "^0.6.3",
        "@types/node": "^22.4.1",
        "prettier": "^3.3.3",
        "tsx": "^4.19.0"
    }
}
